            sin usar listas auxiliares. Un ejemplo de lista capicúa es [50, 17, 91, 17, 50]. """

# f u n c i o n e s 
import random

def listex():
    """Crea lista de n(dos digitos) cantidad de elementos, con numeros de 4 cifras"""
    l=[]
    for i in range (random.randint(10,99)):
        n=random.randint(1000,9999)
        l.append(n)
    return l

def sumex(l):
    """Devuelve la suma de los elementos de la lista"""
    suma=sum(l)
    return suma

def repetidox(l,n):
    """Busca un valor en la lista ingresado por el usuario y lo elimina"""
    while n in l:
        l.remove(n)
    return l

def capicuax(l):
    """Verifica si una lista es capicua"""
    capicua=True
    a=0
    b=len(l)-1
    while a<b:
        if l[a] != l[b]:
            capicua=False
            break
        a=a+1
        b=b-1
    return capicua
        
