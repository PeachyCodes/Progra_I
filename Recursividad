  #1

def digitex(x):
    if x > 9:
        return digitex(x//10)+1
    else:
        return 1

print(digitex(12345))

  #2
def binariex(n):
    x=str(n)
    if n ==0:
        return 0
    if n==1:
        return 1
    else:
        return binariex(n%(10**(len(x)-1))) + int(x[0])*(2**(len(x)-1))
        
print(binariex(111))
