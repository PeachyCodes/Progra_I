  #1

def digitex(x):
    if x > 9:
        return digitex(x//10)+1
    else:
        return 1

print(digitex(12345))

  #2
def binariex(x):
    if x ==0:
        return 0
    if x==1:
        return 1
    else:
        '''binariex(x)= (primer elemento)*(2**(largo del numero-1)) + binariex(segundo elemento y subsiguientes) '''
        return int(str(x)[0])*(2**(len(str(x))-1))+binariex(int(x)%(10**((len(str(x)))-1)))
print(binariex(1000))
